/* pages/epidemicprevention/epidemicprevention.wxss */

.navigator-hover {
  color: blue;
}

.top-image {
  width: 100%;
  height: 100px;
}

.tellsection {
  margin: 16px;
}

.tellinput {
  border: 1px solid #efeff4;
  height: 25px;
  padding-top: 4px;
}

.title {
  color: red;
}

.title-text {
  color: #000;
  margin-left: 4px;
  size: 20px;
  line-height: 40px;
}

.tellsection input {
  color: #000;
  width: 100%;
  padding-left: 5px;
  border-radius: 5px;
}

.radiogroup {
  display: flex;
  flex-direction: row;
}

.radiogroup radio {
  transform: scale(0.7);

}

.radiobox {
  margin-left: 10px;
  margin-right: 20px;
  display: flex;
  flex-direction: row;
}