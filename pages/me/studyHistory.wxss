.main {
  display: flex;
  padding: 5rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.navList {
  width: 48%;
  margin-bottom: 20rpx;
  padding-bottom: 6px;
}

.navListInfo {
  position: relative;
}

.navListInfo image {
  width: 100%;
  height: 100px;
}

.navListTitleItem {
  display: flex;
  flex-direction: row;
  margin-top: 24px;
  justify-content: space-between;
  align-items: center;
}

.navListTitleLeft {
  margin-right: 6px;
  font-size: 12px;
}

.navListTitleRight {
  margin-right: 6px;
  font-size: 12px;
}

.navListTitle {
  font-size: 28rpx;
  display: -webkit-box;
  /* 允许换行 */
  white-space: normal;
  /* 长字符运行换行显示 */
  word-wrap: break-word;
  /* 显示行数 */
  -webkit-line-clamp: 2;
  /* 垂直显示 */
  -webkit-box-orient: vertical;
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 超出部分用'...'表示 */
  text-overflow: ellipsis;
}

.yuandian {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-right: 12px;
  background-color: #ED2A22;
}

.new_list {
  display: flex;
  flex-direction: column;
  margin-left: 6px;
}

.new_item {
  display: flex;
  align-items: center;
  flex-direction: row;
  height: 50px;
}

.tui_item {
  display: -webkit-box;
  /* 允许换行 */
  white-space: normal;
  /* 长字符运行换行显示 */
  word-wrap: break-word;
  /* 显示行数 */
  -webkit-line-clamp: 1;
  /* 垂直显示 */
  -webkit-box-orient: vertical;
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 超出部分用'...'表示 */
  text-overflow: ellipsis;
}

.line {
  border: 1rpx solid #ccc;
  opacity: 0.2;
}