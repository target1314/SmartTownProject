<!--pages/targetedpovertyalleviation/targetedpovertyalleviation.wxml-->
<wxs src="../../utils/filter.wxs" module="filter" />
<view class="alleviation">
	<view class='page_row' bindtap="suo">
		<view class="search">
			<view class="search_arr">
				<icon class="searchcion" size='20' type='search'></icon>
				<input class="" type="true" placeholder="请输入关键字" value="{{searchValue}}" bindinput="serachInput" />
			</view>
		</view>
		<view class='sousuo' bindtap="searchBtn">搜索</view>
	</view>

<view wx:if="{{!isData}}" class='noData'>
	<image src="/image/none.png"></image>
	<view class='mt25'>暂无数据</view>
</view>

	<block class="container" wx:for="{{list}}" wx:key="index" wx:if="{{isData}}">
		<view class="list_item_view" bindtap="itemClick" id="{{index}}" data-item="{{item}}">
			<view class="item_view">
				<text class="text_title">所属村：{{item.village}}</text>
				<text class="text_small">帮扶项目：{{item.helpProject}}</text>
				<text class="text_small">贫困年度：{{item.poorYear}}</text>
				<text class="text_small">帮扶对象：{{item.helpObj}}</text>
			</view>
		</view>
		<view class="line"></view>
	</block>
</view>

<button class="addBtn" style='position:fixed;bottom:0;width:100%' bindtap="addBtnCLick">添加数据</button>
