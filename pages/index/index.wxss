.channel {
  border-top: 1rpx solid #D9D9D9;
  overflow: hidden;
}

.channel-item {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  text-align: center;
}

.channel-image {
  width: 80px;
  height: 80px;
  vertical-align: top;
}

.channel-text {
  display: block;
  color: black;
  size: 16px;
  padding: 6px;
}