/*横向导航*/
.swiper-nav {
  background-color: #fff;
}

.swiper-nav .item-nav {
  position: relative;
  padding: 30rpx 32rpx;
  color: #999;
  font-size: 30rpx;
  cursor: pointer;
  display: inline-block
}

.swiper-nav .active {
  color: #f43838
}

.swiper-nav .active::after {
  content: '';
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  height: 0;
  border-bottom: 4rpx solid #f43838;
  border-radius: 4rpx;
  bottom: 18rpx
}

.tab-list {
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: inline-block;
  white-space: nowrap;
}

.tab-item {
  width: 150rpx;
  height: 85rpx;
  display: inline-block;
  line-height: 85rpx;
  vertical-align: middle;
  text-align: center;
}

.selected-tab {
  color: #f43838;
  border-bottom: 5rpx solid #f43838;
}


.item {
  display: flex;
  flex-direction: column;
}

.item_data {
  display: flex;
  flex-direction: row;
}

.img {
  margin: 10rpx 0 10rpx 10rpx;
}

.item-child {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 100%;
}

.title {
  display: -webkit-box;
  margin-top: 6px;
  width: 100%;
  font-size: 16px;
  height: 45px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.navListTitleItem {
  display: flex;
  flex-direction: row;
  margin-top: 24px;
  justify-content: space-between;
  align-items: center;
}

.navListTitleLeft {
  margin-right: 6px;
  font-size: 12px;
}

.navListTitleRight {
  margin-right: 6px;
  font-size: 12px;
}

.content {
  display: -webkit-box;
  font-size: 14px;
  color: gray;
  margin-top: 6px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.hr {
  height: 10px;
  background-color: #f4f5f6;
}

.line {
  border: 1px solid #ccc;
  opacity: 0.2;
}