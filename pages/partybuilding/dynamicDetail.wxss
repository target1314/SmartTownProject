/* pages/partybuilding/dynamicDetail.wxss */

.dynamic_item{
  display: flex;
  flex-direction: column;
  padding: 6px;
}
.item_title{
  display: flex;
  flex-direction: row;
  margin-top: 12px;
  justify-content: space-between;
  align-items: center;
}

.dynamic_item_text{
  display: -webkit-box;
  margin-top: 6px;
  width: 100%;
  font-size: 16px;
  font-weight: bold;
  -webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
	text-overflow: ellipsis;
}
.item_text{
  margin-top: 6px;
  font-size: 14px;
  color: gray;
}
@import "/wxParse/wxParse.wxss";