/* pages/partybuilding/education.wxss */

.member_bottom {
  background: white;
  margin-top: 12xp;
  margin-bottom: 12px;
}

.item {
  display: flex;
  flex-direction: column;
}

.item_data{
  display: flex;
  flex-direction: row;
}
.img {
  margin: 10rpx 0 10rpx 10rpx;
}

.img image {
  border-radius: 10rpx;
  overflow: hidden;
}

.item-child {
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 100%;
}

.title {
  width: 100%;
  font-size: 16px;
  margin-top: 6px;
  -webkit-line-clamp: 1;
}

.content {
  font-size: 28rpx;
  color: gray;
  margin-top: 12px;
  -webkit-line-clamp: 2;
}

.top_title {
  height: 50px;
  display: flex;
  justify-content: center;
  text-align: center;
  color: #ED2A22;
  align-items: center;
  size: 25px;
}

.hr {
  height: 2px;
  background-color: red;
}

.bank {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.line {
  border: 1px solid #ccc;
  opacity: 0.2;
  margin-left: 50px;
}