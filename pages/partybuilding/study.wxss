/* pages/partybuilding/partybuilding.wxss */

.main {
  display: flex;
  padding: 5rpx;
  flex-wrap: wrap;
  justify-content: space-between;
}

.navList {
  width: 48%;
  margin-bottom: 20rpx;
  padding-bottom: 6px;
  margin-top: 4px;
  padding-top: 2px;
  padding-left: 2px;
  padding-right: 2px;
  border: 3rpx solid #f5f5f5;
  border-radius: 5rpx;
}

.navListInfo {
  position: relative;
}

.navListInfo image {
  width: 100%;
  height: 100px;
}

.navListTitle {
  font-size: 28rpx;
  display: -webkit-box;
  /* 允许换行 */
  white-space: normal;
  /* 长字符运行换行显示 */
  word-wrap: break-word;
  /* 显示行数 */
  -webkit-line-clamp: 2;
  /* 垂直显示 */
  -webkit-box-orient: vertical;
  /* 超出部分隐藏 */
  overflow: hidden;
  /* 超出部分用'...'表示 */
  text-overflow: ellipsis;
}

.content {
  font-size: 28rpx;
  color: gray;
  margin-top: 30rpx;
  -webkit-line-clamp: 2;
}

.hr {
  height: 10px;
  background-color: #f4f5f6;
}